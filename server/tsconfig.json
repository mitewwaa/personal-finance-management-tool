{
  "compilerOptions": {
    "target": "ESNext",        
    "module": "ESNext",       
    "moduleResolution": "node", 
    "strict": true,            
    "esModuleInterop": true,  
    "skipLibCheck": true,      
    "outDir": "./dist",       
    "rootDir": "./src",        
    "resolveJsonModule": true, 
    "allowJs": true           
  },
  "include": ["src/**/*.ts","shared/**/*"],   
  "exclude": ["node_modules"]  
}
